#include <iostream>
using namespace std;
struct Time
{
	int hours;
	int minutes;
	int seconds;
};
long int time_to_secs(Time t) {
	long x = t.hours * 3600 + t.minutes * 60 + t.seconds;
	return x;
}
Time secs_to_time(long x) {
	Time sum;
	sum.hours = x / 3600;
	sum.minutes = x % 3600 / 60;
	sum.seconds = x % 3600 % 60;
	return sum;
}
